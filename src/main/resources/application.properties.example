spring.application.name=real

#Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/car
spring.datasource.username=${DB_USERNAME:root}
spring.datasource.password=${DB_PASSWORD:your_password}
spring.jpa.hibernate.ddl-auto=update

#JWT Token Configuration
jwt.key=${JWT_SECRET_KEY:your-secret-key-here}
jwt.expiry=86400000
jwt.issuer=${JWT_ISSUER:CarBazzar}

# Enable multipart uploads
spring.servlet.multipart.enabled=true

# Increase maximum file size (e.g., 10MB per file)
spring.servlet.multipart.max-file-size=10MB

# Increase maximum request size (e.g., 50MB total)
spring.servlet.multipart.max-request-size=50MB

# Swagger/OpenAPI Configuration
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.operationsSorter=method
springdoc.swagger-ui.tagsSorter=alpha
springdoc.swagger-ui.tryItOutEnabled=true
springdoc.swagger-ui.displayRequestDuration=true

