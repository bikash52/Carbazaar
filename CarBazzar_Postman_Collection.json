{
  "info": {
    "name": "CarBazzar API",
    "description": "Complete API collection for CarBazzar marketplace platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwtToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"securePassword123\",\n  \"mobileNumber\": \"9876543210\",\n  \"fullName\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "signup"]
            }
          }
        },
        {
          "name": "User Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwtToken', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_doe\",\n  \"password\": \"securePassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/signin",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "signin"]
            }
          }
        },
        {
          "name": "Generate OTP",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/generate-otp?mobileNumber=9876543210",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "generate-otp"],
              "query": [
                {
                  "key": "mobileNumber",
                  "value": "9876543210"
                }
              ]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/verify-otp?mobileNumber=9876543210&otp=123456",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "verify-otp"],
              "query": [
                {
                  "key": "mobileNumber",
                  "value": "9876543210"
                },
                {
                  "key": "otp",
                  "value": "123456"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Car Management",
      "item": [
        {
          "name": "Add New Car",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"brand\": \"Honda\",\n  \"model\": \"Civic\",\n  \"year\": 2020,\n  \"fuelType\": \"Petrol\",\n  \"transmission\": \"Manual\",\n  \"mileage\": 15000,\n  \"price\": 850000,\n  \"description\": \"Well-maintained Honda Civic in excellent condition\",\n  \"color\": \"Silver\",\n  \"engine\": \"1.8L\",\n  \"location\": \"Mumbai\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/car/add",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "car", "add"]
            }
          }
        },
        {
          "name": "Get Car Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/car/getDetails/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "car", "getDetails", "1"]
            }
          }
        },
        {
          "name": "Search Cars",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/car/searchCar?param=honda&year=2020",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "car", "searchCar"],
              "query": [
                {
                  "key": "param",
                  "value": "honda"
                },
                {
                  "key": "year",
                  "value": "2020"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Cars (Paginated)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/car?pageNo=0&pageSize=10&sortBy=price&sortDir=desc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "car"],
              "query": [
                {
                  "key": "pageNo",
                  "value": "0"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                },
                {
                  "key": "sortBy",
                  "value": "price"
                },
                {
                  "key": "sortDir",
                  "value": "desc"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Brand Management",
      "item": [
        {
          "name": "Add Brand",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Toyota\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/brandcontroller/add",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "brandcontroller", "add"]
            }
          }
        },
        {
          "name": "Get All Brands",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/brandcontroller/get",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "brandcontroller", "get"]
            }
          }
        }
      ]
    }
  ]
}
